<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:transitionGroup="true">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/imageButton_back"
        style="@style/Widget.AppComponents.ImageButton.Detail"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="@string/content_desc_back_button_image"
        android:src="@drawable/ic_baseline_arrow_back_white_24"
        android:theme="@style/Theme.AppComponents.ImageButton.Detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>